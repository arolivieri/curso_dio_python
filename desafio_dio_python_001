# desafio - criando um sistema bancário
menu = """

[d] depositar
[s] sacar
[e] extrato
[q] sair

=> """

saldo = 0
limite = 500
extrato = ""
numero_saques = 0
LIMITE_SAQUES = 3

while True:

    opcao = input(menu)

    if opcao == 'd':
        valor = float(input('digite o valor a ser depositado: '))

        if valor < 0:
            print('O valor informado é inválido!')
        else:
            saldo += valor
            extrato += f'Depósito: R$ {valor:.2f}\n'
    
    elif opcao == 's':
        valor = float(input('Informe o valor do saque: '))
        excedeu_saldo = valor > saldo
        excedeu_limite = valor > limite
        excedeu_saques = numero_saques > LIMITE_SAQUES

        if excedeu_saldo:
            print('O saldo é insuficiente!')
        elif excedeu_limite:
            print('Limite excedido!')
        elif excedeu_saques:
            print('Excedido o número de saques diários!')
        elif valor> 0:
            saldo += valor
            extrato += f'Saque efetuado: R$ {valor:.2f}\n'
            numero_sques += 1
        else:
            print('O valor informado é inválido!')

    elif opcao == 'e':
        print('\n============EXTRATO============')
        print('Não foram realizadas movimentações.' if not extrato else extrato)
        print(f'\nSaldo: R$ {saldo:.2f}')
        print('=================================')
    
    elif opcao == 'q':
        print('Obrigado por utilizar nossos serviços! Até Mais!')
        break
    
    else:
        print('Opção inválida, selecione uma opção novamente!')
        
        
